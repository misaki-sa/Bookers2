<main>

<%= render 'books/userinfo', book: @book, user: @user %>

<div class="col-md-8 offset-md-1">
  <h2>Users</h2>
    <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3" /th>
        </tr>
      </thead>


      <tbody>

        <% @users.each do |user| %>
        <div><tr>

          <td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "images/no_image.jpg" %></td>
          <td><%= user.name %></td>

          <td><%= link_to "Show", user %></td>

        </tr></div>

        <% end %>
        </tbody>
        </table>


</div>
</div>



        </div>
      </div>
    </div>
</main>