<h2>User Info</h2>
<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%><br />

  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "/assets/image/no_image.jpg" %><br />
  <label for="inputImage">Image</label>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>


  <br /><label for="inputIntroduction">Introduction</label>
  <%= f.text_area :introduction, class: 'form-control' %><br />


<br /><%= f.submit "Update User" %>
<% end %>